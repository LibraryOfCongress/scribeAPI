{
  "name": "transcribe",
  "label": "Transcribe Workflow",
  "generates_subjects": true,
  "generates_subjects_for": "verify",
  "generates_subjects_after": 3,
  "generates_subjects_method": "collect-unique",

  "tasks": {

    "headline": {
      "tool": "compositeTool",
      "tool_config": {
        "tools": {
          "ar_headline": {
            "tool": "textAreaTool",
            "examples": ["U. S. CRUISER MEMPHIS LOST WITH 20 MEN"],
            "label": "Headline"
          },
          "ar_subhead": {
            "tool": "textAreaTool",
            "examples": ["Great Swell Wrecks Vessel in San Domingo Harbor"],
            "label": "Subheads"
          }
        }
      },
      "instruction": "Enter the headline and subhead(s)",
      "help": {
        "file": "t_headline"
      },
      "generates_subject_type": "transcribed_headline"
    },

    "advertisement": {
      "tool": "compositeTool",
      "tool_config": {
        "tools": {
          "ad_text": {
            "tool": "textAreaTool",
            "examples": ["This is no ordinary drink-it-just-to-be-drinkging-something beverage."],
            "label": "Text of Advertisement"
          },
          "ad_company": {
            "tool": "textTool",
            "examples": ["The COCA-COLA COMPANY"],
            "label": "Company Name"
          },
          "ad_product": {
            "tool": "textTool",
            "examples": ["Coca-Cola"],
            "label": "Product"
          }
        }
      },
      "instruction": "Enter the advertising company, product and text",
      "help": {
        "file": "t_advertisement"
      },
      "generates_subject_type": "transcribed_advertisement"
    },

    "illustration": {
      "tool": "compositeTool",
      "tool_config": {
        "tools": {
          "il_type": {
            "tool": "selectOneTool",
            "tool_config": {
                "options": [
                  {
                    "value": "Portrait",
                    "label": "Portrait"
                  },
                  {
                    "value": "Photograph",
                    "label": "Photograph"
                  },
                  {
                    "value": "Political or Panel Cartoon",
                    "label": "Political or Panel Cartoon"
                  },
                  {
                    "value": "Comis Strip",
                    "label": "Comis Strip"
                  },
                  {
                    "value": "Illustration",
                    "label": "Illustration"
                  }
                ]
            },
            "label": "Type"
          },
          "il_caption": {
            "tool": "textTool",
            "label": "Caption"
          },
          "il_author": {
            "tool": "textTool",
            "label": "Author(s)"
          },
          "ca_series": {
            "tool": "textTool",
            "examples": ["S'MATTER POP?"],
            "label": "Cartoon Series"
          }
        }
      },
      "instruction": "Select the best type that characterizes this photograph or illustration. Enter caption, authors and cartoon series",
      "help": {
        "file": "t_illustration"
      },
      "generates_subject_type": "transcribed_illustration"
    }

  }
}
